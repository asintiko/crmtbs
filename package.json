{
  "name": "inventory-desktop",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "description": "Inventory Desktop - система управления складом с синхронизацией",
  "author": "asintiko",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "cross-env ELECTRON_RUN_AS_NODE= vite",
    "build": "tsc && vite build && electron-builder",
    "build:web": "tsc && vite build --mode web",
    "build:server": "tsc --project tsconfig.node.json --outDir server-build",
    "build:win": "tsc && vite build && electron-builder --win",
    "build:mac": "tsc && vite build && electron-builder --mac",
    "build:linux": "tsc && vite build && electron-builder --linux",
    "publish": "tsc && vite build && electron-builder --publish=always",
    "publish:win": "tsc && vite build && electron-builder --win --publish=always",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview"
  },
  "dependencies": {
    "aws-sdk": "^2.1693.0",
    "bcrypt": "^5.1.1",
    "better-sqlite3": "^9.6.0",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "googleapis": "^144.0.0",
    "lucide-react": "^0.469.0",
    "mock-aws-s3": "^4.0.2",
    "nock": "^14.0.10",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.28.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.7.4",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.20",
    "cross-env": "^7.0.3",
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8.4.45",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.2.2",
    "vite": "^5.1.6",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5"
  }
}
